                document.getElementById("kit-modal").classList.remove("hidden");
            }

            function openImageModal(src) {
                closeModals();
                document.getElementById("modal-img-target").src = src;
                document
                    .getElementById("image-modal")
                    .classList.remove("hidden");
            }

            // Diagnostic Logic
            function nextDiag(type) {
                document.getElementById("diag-step-1").classList.add("hidden");
                document
                    .getElementById("diag-result")
                    .classList.remove("hidden");
                const msg = document.getElementById("diag-message");

                if (type === "slow") {
                    msg.innerHTML =
                        "Hai provato a riavviare? Sembra banale, ma risolve l'80% dei problemi di memoria o aggiornamenti pendenti.<br><br>Se persiste, controlla lo spazio su disco.";
                } else if (type === "wifi") {
                    msg.innerHTML =
                        "Spegni e riaccendi il router. Aspetta 60 secondi reali prima di riaccenderlo. No, 10 secondi non bastano.";
                } else {
                    msg.innerHTML =
                        "Per problemi complessi serve un'analisi. Scrivimi i dettagli via email o prenota una chiamata.";
                }
            }

            function resetDiag() {
                document
                    .getElementById("diag-step-1")
                    .classList.remove("hidden");
                document.getElementById("diag-result").classList.add("hidden");
            }

            // Command Logic
            function copyCmd(text) {
                navigator.clipboard.writeText(text);
                alert("Comando copiato: " + text);
            }

            // Calculator Logic
            function calculateDowntime() {
                const emp = document.getElementById("calc-emp").value;
                const rate = document.getElementById("calc-rate").value;
                const hours = document.getElementById("calc-hours").value;
                const total = emp * rate * hours;

                document
                    .getElementById("calc-result")
                    .classList.remove("hidden");
                document.getElementById("calc-total").innerText =
                    "â‚¬ " + total.toLocaleString();
            }
        </script>
