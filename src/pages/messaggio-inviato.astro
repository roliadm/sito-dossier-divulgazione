---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Conferma Trasmissione">
  <Navigation />

  <div class="min-h-screen bg-slate-50 flex items-center justify-center -mt-20">
    <main class="w-full max-w-lg p-6">
      <div
        class="bg-white border border-slate-200 p-12 text-center rounded-2xl shadow-sm"
      >
        <!-- Success Icon -->
        <div class="mb-8 relative inline-flex items-center justify-center">
          <div
            class="w-20 h-20 rounded-full bg-green-50 text-green-500 flex items-center justify-center"
          >
            <svg
              class="w-10 h-10"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>

        <h1 class="font-bold text-3xl text-slate-900 mb-4 tracking-tight">
          Trasmissione Completata
        </h1>

        <p class="text-slate-600 mb-10 leading-relaxed">
          Il tuo messaggio è stato ricevuto.<br />
          Riceverai una risposta appena un operatore umano sarà disponibile.
        </p>

        <a
          href="/"
          class="inline-block font-bold uppercase text-sm text-white bg-slate-900 px-8 py-3 rounded-lg hover:bg-blue-600 hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
        >
          Torna alla Home
        </a>
      </div>
    </main>
  </div>
</Layout>
