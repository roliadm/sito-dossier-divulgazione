---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { getNews } from '../utils/fetchNews';

const newsItems = await getNews();
---
<Layout title="Telex News Globali">
    <div class="flex min-h-screen">
        <Navigation />
        <main class="flex-1 lg:ml-64 p-6 md:p-12 lg:p-20 relative z-10">
            <header class="mb-20">
                <div class="inline-block p-2 border-2 border-ink mb-4 shadow-neo-sm bg-white">
                    <span class="font-mono font-bold uppercase tracking-widest text-xs flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                        RSS Uplink Active
                    </span>
                </div>
                <h1 class="font-sans font-black text-6xl md:text-8xl uppercase leading-none mb-6">Telex<br/>News<span class="text-accent">_</span></h1>
                <p class="font-serif text-xl md:text-2xl text-gray-600 border-l-4 border-ink pl-6 max-w-2xl">
                    Aggregatore automatico di dispacci tecnologici. <br/>
                    <span class="text-sm font-mono text-gray-400 uppercase mt-2 block">Ultimo Sync: {new Date().toLocaleString('it-IT')}</span>
                </p>
            </header>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl">
                {newsItems.map((item) => (
                    <article class="bg-white border-2 border-ink p-6 hover:shadow-neo transition-shadow group relative overflow-hidden">
                        <!-- Top Bar -->
                        <div class="flex justify-between items-center mb-4 pb-4 border-b border-gray-100">
                             <div class="bg-black text-white px-2 py-0.5 font-mono text-xs font-bold uppercase tracking-wider">
                                {item.source}
                             </div>
                             <span class="font-mono text-xs text-gray-400 font-bold">{item.date.toLocaleDateString('it-IT')}</span>
                        </div>
                        
                        <h2 class="font-sans font-bold text-2xl uppercase leading-tight mb-4 group-hover:text-accent transition-colors">
                            <a href={item.link} target="_blank" rel="noopener noreferrer">
                                {item.title}
                            </a>
                        </h2>
                        
                        <p class="font-serif text-gray-600 text-sm leading-relaxed mb-6 line-clamp-3">
                            {item.description}
                        </p>
                        
                        <div class="flex justify-end">
                            <a href={item.link} target="_blank" rel="noopener noreferrer" class="font-mono text-xs font-bold uppercase border border-ink px-4 py-2 hover:bg-ink hover:text-white transition-all flex items-center gap-2">
                                Leggi Fonte <span class="group-hover:translate-x-1 transition-transform">→</span>
                            </a>
                        </div>
                        
                        <!-- Decorative corners -->
                        <div class="absolute top-0 right-0 w-2 h-2 border-t-2 border-r-2 border-ink"></div>
                        <div class="absolute bottom-0 left-0 w-2 h-2 border-b-2 border-l-2 border-ink"></div>
                    </article>
                ))}
            </div>

            <div class="mt-12 bg-yellow-100 border-2 border-ink p-4 flex gap-4 items-start">
                <span class="text-2xl">ℹ️</span>
                <p class="font-serif text-sm">
                    <strong>Disclaimer:</strong> Le notizie sopra riportate sono aggregate automaticamente tramite feed pubblico. 
                    I titoli e i contenuti appartengono ai rispettivi editori. Questo sito non si appropria del contenuto, ma rimanda direttamente alla fonte.
                </p>
            </div>
        </main>
    </div>
</Layout>
