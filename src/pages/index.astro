---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import AnimatedFlask from "../components/AnimatedFlask.astro"; // Keep for blog section aesthetic
import { getCollection } from "astro:content";

// Fetch latest articles for authority/blog section
const allArticles = await getCollection("articoli", ({ data }) => {
    if (import.meta.env.PROD) {
        return data.draft !== true && data.date <= new Date();
    }
    return true;
});
const sortedArticles = allArticles.sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

