                            Articoli tecnici e approfondimenti dal mio blog.
                        </p>
                    </div>
                    <a
                        href="/articoli"
                        class="hidden md:inline-block font-bold text-blue-600 hover:text-blue-800"
                        >Tutti gli articoli ‚Üí</a
                    >
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {
                        sortedArticles
                            .slice(0, 3)
                            .map((article: any, index) => {
                                // Keep functionality from old implementation
                                const colorNames = [
                                    "blue",
                                    "emerald",
                                    "violet",
                                ] as const;
                                const colorName =
                                    colorNames[index % colorNames.length];

                                const colors = [
                                    {
                                        border: "hover:border-blue-400",
                                        text: "group-hover:text-blue-600",
                                    },
                                    {
                                        border: "hover:border-emerald-400",
                                        text: "group-hover:text-emerald-600",
                                    },
                                    {
                                        border: "hover:border-violet-400",
                                        text: "group-hover:text-violet-600",
                                    },
                                ];
                                const color = colors[index % colors.length];

                                return (
                                    <article
                                        class={`bg-white rounded-xl border border-slate-200 p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-[300px] justify-between text-center group relative ${color.border}`}
                                    >
                                        <div class="mt-2 transition-transform duration-300 group-hover:scale-110">
                                            <AnimatedFlask
                                                color={colorName}
                                                class="w-16 h-16 mx-auto"
                                            />
                                        </div>
                                        <h3
                                            class={`font-bold text-xl text-slate-800 transition-colors duration-300 break-words w-full px-2 ${color.text}`}
                                        >
                                            {article.data.title}
                                        </h3>
                                        <p class="font-medium text-xs text-slate-400 uppercase tracking-wider mb-2">
                                            {article.data.date.toLocaleDateString(
                                                "it-IT",
                                                {
                                                    day: "numeric",
                                                    month: "long",
                                                    year: "numeric",
                                                },
                                            )}
                                        </p>
                                        <a
                                            href={`/articoli/${article.slug}`}
                                            class="absolute inset-0 z-10"
                                            aria-label={`Leggi ${article.data.title}`}
                                        />
                                    </article>
                                );
                            })
                    }
                </div>
                <div class="mt-8 text-center md:hidden">
                    <a
                        href="/articoli"
                        class="font-bold text-blue-600 hover:text-blue-800"
                        >Tutti gli articoli ‚Üí</a
                    >
                </div>
            </div>
        </section>

        <!-- FOOTER -->
        <Footer />
    </main>
</Layout>
