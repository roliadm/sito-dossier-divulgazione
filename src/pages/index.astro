---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import NewsTicker from "../components/NewsTicker.astro";
import NewsTicker from "../components/NewsTicker.astro";
import BullshitDetector from "../components/BullshitDetector.astro";
import Footer from "../components/Footer.astro";

import { getCollection } from "astro:content";

const allArticles = await getCollection("articoli", ({ data }) => {
    if (import.meta.env.PROD) {
        return data.draft !== true && data.date <= new Date();
    }
    return true;
});
const sortedArticles = allArticles.sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
const latestArticleData = sortedArticles[0];

const latestArticle = {
    title: latestArticleData.data.title,
    slug: latestArticleData.slug,
    desc: latestArticleData.data.description,
    date: latestArticleData.data.date.toLocaleDateString("it-IT", {
        day: "numeric",
        month: "short",
        year: "numeric",
    }),
};
---

<Layout title="roccoandrealigorio">
    <div class="min-h-screen">
        <Navigation />
        <!-- Navigation hidden on Home for specific layout, or we can keep it for mobile sidebar only? keeping clear for now -->

        <main class="flex-grow w-full max-w-7xl mx-auto px-4 py-12 md:py-20">
            <!-- 1. HEADER: Professional Studio Title -->
            <header class="text-center mb-24 w-full max-w-4xl mx-auto">
                <h1
                    class="font-bold text-5xl md:text-7xl tracking-tight text-slate-900 mb-6"
                >
                    RoLiADM Tech
                </h1>
                <p class="font-medium text-slate-500 text-lg md:text-xl tracking-wide uppercase mb-10">
                    By Rocco A. Ligorio
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a
                        href="/contatti"
                        class="px-8 py-4 bg-blue-600 text-white font-bold rounded-xl shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all text-lg uppercase tracking-wide flex items-center gap-2"
                    >
                        <span>✉️</span> Richiedi Assistenza
                    </a>
                    <a
                        href="/chi-sono"
                        class="px-8 py-4 bg-white text-slate-700 font-bold border border-slate-200 rounded-xl hover:bg-slate-50 transition-all text-lg uppercase tracking-wide"
                    >
                        Chi Sono
                    </a>
                </div>
            </header>

            <!-- 3. CARDS: Clean Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 w-full mb-20">
                
                <!-- Articles Loop -->
                {sortedArticles.slice(0, 3).map((article, index) => {
                     // Colors array
                     const colors = [
                        { border: 'hover:border-blue-400', text: 'group-hover:text-blue-600', icon: 'text-blue-200' },
                        { border: 'hover:border-emerald-400', text: 'group-hover:text-emerald-600', icon: 'text-emerald-200' },
                        { border: 'hover:border-violet-400', text: 'group-hover:text-violet-600', icon: 'text-violet-200' },
                     ];
                     const color = colors[index % colors.length];
                     
                     return (
                    <article class={`bg-white rounded-xl border border-slate-200 p-8 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex flex-col h-[380px] justify-between text-center group ${color.border}`}>
                        <!-- Icon Placeholder -->
                        <div class={`transition-colors duration-300 mt-4 ${color.text} ${color.icon}`}>
                             <!-- Simple Abstract Icon -->
                            <svg class="w-20 h-20 mx-auto stroke-current opacity-80 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                            </svg>
                        </div>

                        <!-- Content -->
                        <h2 class={`font-bold text-2xl text-slate-800 transition-colors duration-300 break-words w-full px-2 ${color.text}`}>
                            {article.data.title}
                        </h2>
                        
                        <div class="w-full">
                            <p class="font-medium text-xs text-slate-400 uppercase tracking-wider mb-2">
                                {article.data.date.toLocaleDateString("it-IT", { day: "numeric", month: "long", year: "numeric" })}
                            </p>
                        </div>

                        <a href={`/articoli/${article.slug}`} class="absolute inset-0 z-10" aria-label={`Leggi ${article.data.title}`}></a>
                    </article>
                )})}

            </div>

             <div class="mt-12 text-center w-full border-t border-slate-100 pt-12">
                 <Footer />
             </div>
        </main>
    </div>
</Layout>
